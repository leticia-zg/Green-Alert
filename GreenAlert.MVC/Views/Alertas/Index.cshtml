@model List<GreenAlert.MVC.Models.AlertaViewModel>

    @{
    ViewData["Title"] = "Alertas";
    }

    <h1>Alertas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Valor</th>
                <th>Descrição</th>
                <th>Data/Hora</th>
                <th>Sensor ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var alerta in Model)
        {
            <tr>
                <td>@alerta.Tipo</td>
                <td>@alerta.Valor</td>
                <td>@alerta.Descricao</td>
                <td>@alerta.DataHora.ToString("g")</td>
                <td>@alerta.SensorId</td>
            </tr>
        }
        </tbody>
    </table>
